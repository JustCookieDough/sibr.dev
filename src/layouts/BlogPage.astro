---

import Tags from "../components/Tags.astro";
import Page from "./Page.astro"

export interface Props {
	title: string;
  authors: string[];
  date: string;
  description: string;
  tags: string[];
  image?: string;
  alt?: string;
  url: string;
}

const {
  title,
  authors,
  date,
  description,
  tags,
  image,
  alt,
  url
} = Astro.props.frontmatter || Astro.props;

---

<Page title={title}>
  <header>
    <span class="info">By: {authors?.join(", ")} <span aria-hidden="true">â€¢</span> {new Date(date).toDateString()}</span>
    <h1 class="title">{title}</h1>
    <div class="tag">
      <Tags tags={tags}/>
    </div>
  </header>
  <slot/>
</Page>

<style>
  h1.title{
      margin-top: 0;
  }

  .info {
    font-size: var(--step-0);
    font-weight: 90;
    font-family: var(--barlow);
    font-stretch: 400%;
  }

  header > .title {
    margin-top: var(--space-2xs);
  }

  header > .tag {
    margin-top: var(--space-s);
  }

  @media (min-width: 1280px) {
    header {
      margin-top: 0; 
    }
  }
</style>