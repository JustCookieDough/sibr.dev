---
import "../styles/reset.css";
import "../styles/utils.css";

import Skeleton from "./Skeleton.astro";
import Sidebar from "../components/Sidebar.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props.frontmatter || Astro.props;
---

<Skeleton>
	<Sidebar />
	<main class="main-content">
		<slot />
		<footer class="disclaimer">
			<p>
				SIBR is neither endorsed by nor directly affiliated with The Game Band.
			</p>
		</footer>
	</main>
</Skeleton>
<style is:global>
	/* :root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	} */
	
	* {
		box-sizing: border-box;
	}
	
	html {
		font-family: var(--serif);
		background-color: var(--purble-50);
	}

	body {
		color: var(--purble-black);
		margin: var(--space-s-l, 1.5rem);
	}

	code {
		font-family: var(--mono);
	}

	main > * + * {
		margin-top: var(--space-m);
	}

	main > :where(h1, h2, h3) + * {
		margin-top: var(--space-s);
	}

	main > blockquote > * + * {
		margin-top: var(--space-m);
	}

	main > :where(ul, ol) {
		padding: 0 var(--space-s);
		font-size: var(--step-0);
	}

	sup {
		font-size: var(--step--2);
	}

	main > :where(ul, ol) > * + * {
		margin-top: var(--space-xs);
	}
	
	main > .footnotes * + * {
		margin-top: var(--space-xs);
	}

	main > .footnotes p {
		font-size: var(--step--1);
	}

	main > .footnotes {
		margin-top: var(--space-l);
	}

	/* main blockquote:not(#\#):not(#\#):not(#\#):not(#\#):not(#\#):not(#\#):not(#\#):not(#\#)>*+* {
		margin-top: var(--space-m);
	} */

	main > * {
		max-width: 70ch;
	}
	
	main > *:last-child {
		margin-bottom: var(--space-l-xl);
	}
	
	main > *:first-child {
		margin-top: var(--space-l-xl);
	}

	main h1 {
		font-size: var(--step-4);
	}

	main p {
		font-size: var(--step-0);
	}

	main blockquote {
		padding: var(--space-xs);
		background-color: var(--purble-100);
		border-left: 3px solid var(--purble-700);
	}

	main :where(h1, h2, h3) {
		font-weight: 600;
	}
	/* // body {

	// } */
	:root {
		--screen-desktop: 1280px;
	}

	@media (min-width: 1280px) {
		body {
			display: grid;
			max-width: 1152px;
			margin: var(--space-xl) auto;
			grid-template-columns: 240px 1fr;
			column-gap: var(--space-l-xl);
		}
	}

	/* .link-bar {
		display: flex;
		flex-direction: column;
		gap: var(--space-m);
	}
	.link-bar nav {
			display: flex;
			flex-direction: column;
			gap: var(--space-s);
	} */
/* 
		.link {
			&.text {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: var(--space-2xs);
			}

			&.icon {
				display: flex;
				justify-items: center;
				flex-wrap: 1;
				gap: var(--space-2xs);
			}
		}
	} */

	.disclaimer p {
			text-align: center;
			font-size: .7em;
	}
</style>
